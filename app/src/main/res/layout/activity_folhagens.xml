<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Folhagens">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Folhagens"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo1"
        style="@style/Logo1"
        android:src="@drawable/gaiagardenlogo"

        android:layout_marginRight="282dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/verde"

        android:layout_marginTop="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/espadadesaojorge"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/perfil"
        android:src="@drawable/perfil"

        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_marginRight="360dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo1"
        app:layout_constraintStart_toStartOf="@id/barra"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        />

    <TextView
        android:id="@+id/perfiltexto"
        android:text="Perfil"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"

        app:layout_constraintBottom_toBottomOf="@id/barra"
        app:layout_constraintTop_toTopOf="@id/barra"
        app:layout_constraintStart_toEndOf="@id/perfil"
        />

    <ImageView
        android:id="@+id/costeladeadao"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/costeladeadao"

        android:layout_marginRight="253dp"
        android:layout_marginTop="180dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/croton"
        />

    <TextView
        android:id="@+id/textocostela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costela de Adão"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginRight="255dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/costeladeadao"
        />

    <TextView
        android:id="@+id/precocostela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,50"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginRight="253dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textocostela"
        />

    <ImageView
        android:id="@+id/croton"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/croton"

        android:layout_marginRight="253dp"
        android:layout_marginTop="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/costeladeadao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textocroton"
        />

    <TextView
        android:id="@+id/textocroton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cróton"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="255dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/croton"
        />

    <TextView
        android:id="@+id/precocroton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,50"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginRight="253dp"
        android:layout_marginBottom="40dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textocroton"
        />

    <ImageView
        android:id="@+id/cancaodaindia"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/cancaodaindia"
        android:layout_marginRight="253dp"
        android:layout_marginTop="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/croton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textocancao"
        />

    <TextView
        android:id="@+id/textocancao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canção da Índia"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="255dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancaodaindia"
        />

    <TextView
        android:id="@+id/precocancao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,50"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginRight="253dp"
        android:layout_marginBottom="40dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textocancao"
        />


    <ImageView
        android:id="@+id/espadadesaojorge"

        android:src="@drawable/espadadesaojorge"

        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginTop="180dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textoespada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Espada de São Jorge"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:textSize="14sp"

        app:layout_constraintTop_toBottomOf="@id/espadadesaojorge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/precoorquidea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 47,50"

        android:textStyle="bold"
        android:textColor="@color/texto"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoespada"
        />

    <ImageView
        android:id="@+id/medalhaocalathea"

        android:src="@drawable/medalhaocalathea"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/espadadesaojorge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textomedalhao"
        />

    <TextView
        android:id="@+id/textomedalhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Medalhão Calathea"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:textSize="15sp"

        app:layout_constraintTop_toBottomOf="@id/medalhaocalathea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/precomedalhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,50"

        android:textStyle="bold"
        android:textColor="@color/texto"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textomedalhao"
        />

    <ImageView
        android:id="@+id/samambaia"

        android:src="@drawable/sambaia"

        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginTop="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medalhaocalathea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textosamambaia"

        />

    <TextView
        android:id="@+id/textosamambaia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Samambaia"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:textSize="15sp"

        app:layout_constraintTop_toBottomOf="@id/samambaia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/precosamambaia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,50"

        android:textStyle="bold"
        android:textColor="@color/texto"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textosamambaia"
        />


    <ImageView
        android:id="@+id/jiboia"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/jiboia"

        android:layout_marginTop="180dp"

        app:layout_constraintStart_toEndOf="@id/espadadesaojorge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ficus"
        />

    <TextView
        android:id="@+id/textojiboia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jibóia"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginLeft="255dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jiboia"
        />

    <TextView
        android:id="@+id/precojiboia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,50"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginLeft="253dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textojiboia"
        />

    <ImageView
        android:id="@+id/ficus"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/ficus"

        android:layout_marginLeft="256dp"

        android:layout_marginTop="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jiboia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/coracaopartido"

        />

    <TextView
        android:id="@+id/textoficus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Figueira"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginLeft="255dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ficus"
        />

    <TextView
        android:id="@+id/precoficus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,50"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginLeft="253dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoficus"
        />

    <ImageView
        android:id="@+id/coracaopartido"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/coracaopartido"

        android:layout_marginTop="50dp"

        android:layout_marginLeft="256dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ficus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/coracaopartido"
        />

    <TextView
        android:id="@+id/textocoracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antúrio"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginLeft="255dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coracaopartido"
        />

    <TextView
        android:id="@+id/precocoracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,50"

        android:textStyle="bold"
        android:textColor="@color/texto"
        android:layout_marginLeft="253dp"

        android:textSize="15sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textocoracao"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>