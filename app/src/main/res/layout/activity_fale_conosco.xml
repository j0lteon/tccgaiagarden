<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaleConosco"
    android:orientation="vertical"
    android:background="#FFFFFF">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaleConosco">


    <View
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/verde"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/seta"
        android:src="@drawable/seta"

        android:layout_width="30dp"
        android:layout_height="40dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        />

    <TextView
        android:id="@+id/voltar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Voltar"

        android:layout_marginRight="290dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        app:layout_constraintTop_toTopOf="@id/barra"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/faleconosco"
        android:src="@drawable/faleconoscoverde"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginTop="85dp"
        android:layout_marginRight="300dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/faleconoscotexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/titulo"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Fale Conosco"

        android:layout_marginTop="100dp"
        android:layout_marginRight="150dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/faleconosco"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/preencha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preencha os campos:"

        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/texto"

        android:layout_marginRight="175dp"
        android:layout_marginTop="165dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <EditText
        android:id="@+id/nome"
        style="@style/Edit_text"
        android:hint="Nome:"
        android:inputType="textPersonName"

        android:layout_marginTop="210dp"
        android:padding="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/email"
        />

    <EditText
        android:id="@+id/email"
        style="@style/Edit_text"
        android:hint="E-mail:"
        android:inputType="textEmailAddress"

        android:layout_marginTop="30dp"
        android:padding="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nome"
        app:layout_constraintBottom_toTopOf="@id/telefone"
        />

    <EditText
        android:id="@+id/telefone"
        style="@style/Edit_text"
        android:hint="Telefone:"
        android:inputType="number"

        android:layout_marginTop="30dp"
        android:padding="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        />

    <TextView
        android:id="@+id/insira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira sua mensagem:"

        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/texto"

        android:layout_marginRight="175dp"
        android:layout_marginTop="25dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefone"


        />

    <EditText
        android:id="@+id/texto"
        style="@style/Edit_text"

        android:hint="Mensagem:"

        android:inputType="textLongMessage"

        android:padding="20dp"

        android:layout_marginTop="25dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insira"
        />

    <Button
        android:id="@+id/entrar"
        style="@style/Button"
        android:backgroundTint="@color/verde"
        android:text="Enviar"

        android:layout_marginTop="55dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>