<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Categorias">


    <ImageView
        android:id="@+id/logo1"
        android:src="@drawable/gaiagardenlogo"
        style="@style/Logo1"

        android:layout_marginRight="282dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/verde"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo1"
        />

    <ImageView
        android:id="@+id/home"
        android:src="@drawable/home"

        android:layout_width="30dp"
        android:layout_height="40dp"

        android:layout_marginRight="366dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo1"
        app:layout_constraintStart_toStartOf="@id/barra"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        />

    <TextView
        android:id="@+id/hometexto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Início"


        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"


        app:layout_constraintBottom_toBottomOf="@id/barra"
        app:layout_constraintTop_toTopOf="@id/barra"
        app:layout_constraintStart_toEndOf="@id/home"
        />



    <ImageView
        android:id="@+id/estrela"
        android:src="@drawable/estrela"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:layout_marginLeft="65dp"

        app:layout_constraintStart_toEndOf="@id/hometexto"
        app:layout_constraintTop_toTopOf="@id/barra"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/meusfavoritos"
        android:text="Meus favoritos"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:layout_marginLeft="4dp"

        app:layout_constraintTop_toTopOf="@id/barra"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        app:layout_constraintStart_toEndOf="@id/estrela"
        />

    <ImageView
        android:id="@+id/categoriacactos"
        android:src="@drawable/categoriacacto"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"

        app:layout_constraintTop_toBottomOf="@id/barra"
        app:layout_constraintStart_toStartOf="@id/hometexto"
        />

    <TextView
        android:id="@+id/cactos"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Cactos"
        android:textStyle="bold"
        android:textColor="@color/texto"
        android:textAlignment="center"
        android:textSize="18sp"

        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toBottomOf="@id/categoriacactos"
        app:layout_constraintStart_toStartOf="@id/categoriacactos"
        />





    <ImageView
        android:id="@+id/categoriaflor"
        android:src="@drawable/categoriaflores"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"

        app:layout_constraintTop_toBottomOf="@id/barra"
        app:layout_constraintStart_toEndOf="@id/categoriafolhagens"
        />

    <TextView
        android:id="@+id/flores"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Flores"
        android:textStyle="bold"
        android:textColor="@color/texto"
        android:textAlignment="center"
        android:textSize="18sp"

        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toBottomOf="@id/categoriaflor"
        app:layout_constraintStart_toStartOf="@id/categoriaflor"
        />

    <ImageView
        android:id="@+id/categoriafolhagens"
        android:src="@drawable/folhagens"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"

        app:layout_constraintTop_toBottomOf="@id/categoriacactos"
        app:layout_constraintStart_toStartOf="@id/hometexto"
        />

    <TextView
        android:id="@+id/Folhagens"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Folhagem"
        android:textStyle="bold"
        android:textColor="@color/texto"
        android:textAlignment="center"
        android:textSize="18sp"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toBottomOf="@id/categoriafolhagens"
        app:layout_constraintStart_toStartOf="@id/hometexto"
        />

    <ImageView
        android:id="@+id/categoriamudas"
        android:src="@drawable/categoriamudas"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"

        app:layout_constraintTop_toBottomOf="@id/categoriaflor"
        app:layout_constraintStart_toStartOf="@id/categoriaflor"
        />

    <TextView
        android:id="@+id/mudas"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Mudas"
        android:textStyle="bold"
        android:textColor="@color/texto"
        android:textAlignment="center"
        android:textSize="18sp"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"

        app:layout_constraintTop_toBottomOf="@id/categoriamudas"
        app:layout_constraintStart_toStartOf="@id/categoriamudas"
        />

    <View
        android:id="@+id/rodape"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_marginTop="30dp"
        android:background="@color/verde"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/sobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Sobre nós:"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rodape" />

    <TextView
        android:id="@+id/empresa"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="Empresa fundada no ano de 2023. Nosso principal objetivo é levar conforto através das nossas plantas. "
        android:textColor="@color/white"
        android:textSize="12sp"

        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/sobre"
        app:layout_constraintTop_toTopOf="@id/sobre"
        />


    <View
        android:id="@+id/barrabranca"

        android:background="@color/white"
        android:layout_width="2dp"
        android:layout_height="80dp"

        app:layout_constraintTop_toTopOf="@id/rodape"
        app:layout_constraintBottom_toBottomOf="@id/rodape"
        app:layout_constraintStart_toStartOf="@id/rodape"
        app:layout_constraintEnd_toEndOf="@id/rodape"
        />

    <ImageView
        android:id="@+id/imgfalecnsc"
        android:layout_width="30dp"
        android:layout_height="40dp"

        android:src="@drawable/cactofrailea"

        android:layout_marginRight="150dp"
        app:layout_constraintStart_toStartOf="@id/barrabranca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rodape"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/faleconosco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Fale Conosco"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginRight="10dp"

        app:layout_constraintStart_toEndOf="@id/imgfalecnsc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/rodape"
        />

</androidx.constraintlayout.widget.ConstraintLayout>