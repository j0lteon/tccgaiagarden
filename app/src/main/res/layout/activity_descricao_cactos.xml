<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DescricaoCactos"
    android:background="@color/white"
    >


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescricaoCactos"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo1"
        android:src="@drawable/gaiagardenlogo"
        style="@style/Logo1"

        android:layout_marginRight="282dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/verde"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo1"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/perfil"
        android:src="@drawable/perfil"

        android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_marginRight="360dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo1"
        app:layout_constraintStart_toStartOf="@id/barra"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        />

    <TextView
        android:id="@+id/perfiltexto"
        android:text="Perfil"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"

        app:layout_constraintBottom_toBottomOf="@id/barra"
        app:layout_constraintTop_toTopOf="@id/barra"
        app:layout_constraintStart_toEndOf="@id/perfil"
        />

    <ImageView
        android:id="@id/imgfalecnsc"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_marginRight="20dp"

        android:src="@drawable/faleconosco"

        app:layout_constraintTop_toTopOf="@id/barra"
        app:layout_constraintStart_toEndOf="@id/perfiltexto"
        app:layout_constraintEnd_toEndOf="@id/barra"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        />

    <TextView
        android:id="@+id/faleconosco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"

        android:layout_marginRight="5dp"

        android:textColor="@color/white"
        android:textStyle="bold"

        android:text="Fale Conosco"

        app:layout_constraintStart_toEndOf="@id/imgfalecnsc"
        app:layout_constraintEnd_toEndOf="@id/barra"
        app:layout_constraintBottom_toBottomOf="@id/barra"
        app:layout_constraintTop_toTopOf="@id/barra"
        />

    <ImageView

        android:id="@+id/cactos"
        android:src="@drawable/cacto2"

        android:layout_width="match_parent"
        android:layout_height="235dp"

        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/barra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/name_prod"
        android:text="Cacto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/titulo"
        android:textStyle="bold"

        android:layout_marginTop="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cactos" />

    <TextView
        android:id="@+id/preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="2dp"

        android:text="R$21,90"

        android:textStyle="bold"
        android:textSize="18sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_prod"
        />

    <TextView
        android:id="@+id/desc_cacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição: Cacto pequeno redondo em vaso laranja comum."

        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"

        android:textStyle="bold"
        android:textAlignment="center"

        android:textColor="@color/texto"
        android:textSize="18sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/preco"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>